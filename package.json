{
  "name": "sourcegraph-langserver-http",
  "title": "Language server (HTTP)",
  "description": "A Sourcegraph extension that provides hovers, definitions, references, and implementations by communicating with an LSP-compliant language server over HTTP.",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "Language server (HTTP) settings",
      "properties": {
        "languageServer.url": {
          "description": "The URL to the HTTP(S) endpoint of the LSP gateway, which is expected to translate an HTTP POST with a JSON array body of multiple LSP requests to a JSON array of the corresponding responses.",
          "type": "string",
          "format": "uri",
          "examples": [
            "https://sourcegraph.com/.api/xlang"
          ]
        }
      }
    }
  },
  "version": "0.0.0-DEVELOPMENT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-langserver-http.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cx-langserver-http.js",
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "semantic-release": "semantic-release",
    "prettier": "prettier '**/{*.{js?(on),ts?(x),scss},.*.js?(on)}' --write --list-different",
    "tslint": "tslint -c tslint.json -p tsconfig.json './src/*.ts?(x)' './*.ts?(x)'",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register --require source-map-support/register --opts mocha.opts",
    "cover": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --require ts-node/register --require source-map-support/register --all mocha --opts mocha.opts --timeout 10000",
    "build": "parcel build --no-minify --detailed-report --out-file cx-langserver-http.js src/extension.ts",
    "serve": "parcel serve --no-hmr --no-source-maps --out-file cx-langserver-http.js src/extension.ts",
    "sourcegraph:prepublish": "yarn run build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts?(x)"
    ],
    "exclude": [
      "**/*.test.ts?(x)"
    ],
    "extension": [
      ".tsx",
      ".ts"
    ]
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@sourcegraph/prettierrc": "^2.2.0",
    "@sourcegraph/tsconfig": "^3.0.0",
    "@sourcegraph/tslint-config": "^12.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.1",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2",
    "semantic-release": "^15.9.9",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@sourcegraph/sourcegraph.proposed": "^12.0.1",
    "rxjs": "^6.3.2",
    "vscode-languageserver-types": "^3.12.0"
  }
}
